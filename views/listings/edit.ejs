<%layout("./layouts/boilerplate.ejs")%>
  <body>
    <h2>Create New Listing</h2>
    <br><br>
    <div class="row mt-3">
      <div class="col-8 offset-2">
      <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" value=<%=listing.title%> class="form-control" required/>
        </div>
        <div class="valid-feedback">Look's good</div>
        <br /><br />
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <br /><br />
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input name="listing[image]" type="text" class="form-control" required/>
        </div>
        <br /><br />
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" type="number" value=<%=listing.price%> class="form-control" required/>
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>
          <br /><br />
          <div class="mb-r col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" value=<%=listing.country%> class="form-control" required/>
            <div class="invalid-feedback">Please enter a valid country</div>
          </div>
        </div>
        
        <br /><br />
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" value=<%=listing.location%> class="form-control" required/>
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>
        <button type="submit" class="edit-btn btn btn-dark mt-3">Edit</button>
      </form>
      <br><br>
    
    </div>
  </div>
</body>